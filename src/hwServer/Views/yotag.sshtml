<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>Tag Location</title>
<meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
<script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css' rel='stylesheet' />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
<style>
  body { margin:0; padding:0; }
  #map { position:absolute; top:0; bottom:0; width:300px; height:300px; }
</style>
</head>
<body>
<div class="row">
	<div class="col-sm-12">
		<h3>Tag Created</h3>
		<p>The hydrant has been tagged.</p>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<div id="map"></div>
	</div>
</div>

<script>
L.mapbox.accessToken = '@Context.ViewBag.MapBoxKey';
var map = L.mapbox.map('map', '@Context.ViewBag.MapBoxMap')
    .setView([@Model.Position.Y, @Model.Position.X], 16);

var myLayer = L.mapbox.featureLayer().addTo(map);

var geoJson = [{
    type: 'Feature',
    geometry: {
        type: 'Point',
        // coordinates here are in longitude, latitude order because
        // x, y is the standard for GeoJSON and many formats
        coordinates: [@Model.Position.X, @Model.Position.Y ]
    },
    properties: {
        title: 'Hydrant',
        "icon": {
            "iconUrl": "/images/fire-hydrant-2.png",
            "iconSize": [32, 37],
            "iconAnchor": [16, 37], 
            "popupAnchor": [0, -37],
            "className": "dot"
        }
    }
}];

myLayer.on('layeradd', function(e) {
    var marker = e.layer,
        feature = marker.feature;

    marker.setIcon(L.icon(feature.properties.icon));
});

myLayer.setGeoJSON(geoJson);

</script>
</body>
</html>
